<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Moje konto</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Imie</th>
                    <th>Nazwisko</th>
                    <th>e-mail</th>
                    <th>Akcje</th>
                </tr>
            </thead>
        
        <tbody>
            <% for (let user of users) { %>
                <tr>
                    <td><%= user.Name %></td>
                    <td><%= user.Surname %></td>
                    <td><%= user.email %></td>
                    <td>
                <ul class="list-actions">
                     <a href="/account/edit/<%=user.id%>" class="list-actions-button-edit">Edytuj</a>
                </ul>
                </td>
            </tr>
            <% } %>
        </tbody>
        </table>
    </main>

    <%- include('../fragments/footer.ejs') %>
